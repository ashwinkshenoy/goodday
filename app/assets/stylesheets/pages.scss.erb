// Loader
#loader {
  animation: animate 0.8s linear infinite;
  // clip: rect(0, 80px, 80px, 40px);
  height: 50px;
  width: 50px;
  // position: absolute;
  // left: calc(50% - 40px);
  // top: calc(50% - 40px);
}
@keyframes animate {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(220deg)
  }
}
#loader:after {
  animation: animate2 0.8s ease-in-out infinite;
  clip: rect(0, 80px, 80px, 40px);
  content:'';
  border-radius: 50%;
  height: 50px;
  width: 50px;
  position: absolute;
}
@keyframes animate2 {
  0% {
    box-shadow: inset #cf0a2c 0 0 0 2px;
    transform: rotate(0deg);
  }
  50% {
    box-shadow: inset #cf0a2c 0 0 0 2px;
  }
  100% {
    box-shadow: inset #cf0a2c 0 0 0 2px;
    transform: rotate(140deg);
  }
}

.load_div {
