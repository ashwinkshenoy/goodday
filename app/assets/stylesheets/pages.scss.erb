// Header
.navbar {
  border: 0 !important;
  background-color: transparent !important;
}

.logo {
  margin-top: -25px;
  width: 110px;
}

.navbar-right {
  margin-top: 20px !important;
  li {
    margin-right: 20px;
    a {
      color: $brown !important;
      font-size: 18px;
    }
  }
}

.navbar-default .navbar-toggle,
.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
  border: none;
  margin-top: 30px;
  background-color: transparent !important;
}

.icon-bar {
  background-color: $brown !important;
}

.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: #e7e7e7;
  border: 0;
  margin-top: 0px;
  text-align: right;
  box-shadow: none;
}

@media screen and (min-width: 992px) {
  .mob-navbar-fixed-top {
    position: fixed !important;
    right: 0;
    left: 0;
    z-index: 1030;
    top: 0;
  }
}


.navbar-nav > li > a {
  padding-top: 10px !important;
  padding-bottom: 10px !important;
}


.navbar-default .navbar-nav > .active > a {
  background-color: $brown !important;
  border-radius: 30px;
  color: white !important;
}

//Animated menu icon for mob start
.navbar-toggle {
  background: transparent !important;
  border: 0;
  margin-top: 20px;

  &:hover {
    background: transparent !important;
  }

  .icon-bar {
    transition: all .2s;
    width: 22px;
  }

  .top-bar {
    transform: rotate(45deg);
    transform-origin: 10% 10%;
  }

  .middle-bar {
    opacity: 0;
  }

  .bottom-bar {
    transform: rotate(-45deg);
    transform-origin: 10% 90%;
  }
}

.navbar-collapse {
  border: 0;
  text-align: center;
}

.navbar-collapse.in .dropdown-menu {
  text-align: center;
  margin-left: -30px;
}

.collapsed {
  .top-bar {
    transform: rotate(0);
  }

  .middle-bar {
    opacity: 1;
  }

  .bottom-bar {
    transform: rotate(0);
  }
}
//Animated menu end

